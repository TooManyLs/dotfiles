    "modules-left": [
        "hyprland/workspaces",
        "custom/media"
    ],
    "modules-center": [
        "hyprland/window"
    ],
    "modules-right": [
        "cpu",
        "memory",
        "pulseaudio/slider",
        "custom/notification",
        "tray",
        "bluetooth",
        "network",
        "hyprland/language",
        "clock",
        "custom/power"
    ],
    "keyboard-state": {
